<div class="container">
  <div class="form-heading"><%= t(".sign_in") %></div>
  <div class="form">
    <% if @error_message %>
      <div class="error_message">
        <%= @error_message %>
      </div>
    <% end %>
    <%= form_tag("/login") do %>
      <p><%= t(".email") %></p>
      <input name="email" value="<%= @email %>" class="input">
      <p><%= t(".password") %></p>
      <input type="password" name="password" value="<%= @password %>" class="input">
      <input type="submit" value="<%= t(".sign_in") %>" class="submit">
    <% end %>
  </div>
</div>
